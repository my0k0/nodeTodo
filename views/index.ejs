<%- include("partials/header") %>
  <div class="table-container">
    <h2 class="todo-title">Todo list</h2>
    <div>
      <a href="/add-todo" class="btn">Add todo</a>
    </div>
    <br>
    <table>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Action</th>
      </tr>
      
      <% for( let index = 0; index < todos.length; index++ ) { %>
        <tr>
          <td><%= todos[index].title %></td>
          <td><%= todos[index].desc %></td>
          <td><%= moment(todos[index].createdAt).format('MMM DD YYYY, HH:mm:ss a') %></td>
          <td><%= moment(todos[index].updatedAt).format('MMM DD YYYY, HH:mm:ss a') %></td>
          <td>
            <a href="/update-todo?id=<%= todos[index]._id %>" class="btn">Edit</a>
            <a href="/delete-todo?id=<%= todos[index]._id %>" class="btn">Delete</a>
          </td>
        </tr>
      <% } %>

    </table>
  </div>
<%- include("partials/footer") %>