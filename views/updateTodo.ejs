<%- include("partials/header") %>
<div class="table-container">
  <h2 class="todo-title">Update todo</h2>

  <div>
    <a href="/" class="btn">Back</a>

    <form action="/update-todo/<%= todo._id %>" method="post">
      <div class="update-todo">
        <div class="form-group">
          <label for="title" class="text-light">Title</label>
          <input type="text" value="<%= todo.title %>" name="title" id="title" placeholder="type todo here" />
        </div>
        <div class="form-group">
          <label for="desc" class="text-light">Description</label>
          <input type="text" value="<%= todo.desc %>" name="desc" id="desc" placeholder="type description here" />
        </div>
        <div class="form-group">
          <button type="submit" class="btn">Update</button>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include("partials/footer") %>
